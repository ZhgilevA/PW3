<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow>
            <TextView style="@style/textViewStyle" android:text="@string/vertical"></TextView>
        </TableRow>
        <TableRow style="@style/layoutStyleV" android:background="@color/red">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="КАЖДЫЙ"></TextView>
        </TableRow>
        <TableRow style="@style/layoutStyleV" android:background="@color/orange">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="ОХОТНИК"></TextView>
        </TableRow>
        <TableRow style="@style/layoutStyleV" android:background="@color/yellow">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="ЖЕЛАЕТ"></TextView>
        </TableRow>
        <TableRow style="@style/layoutStyleV" android:background="@color/green">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="ЗНАТЬ"></TextView>
        </TableRow>
        <TableRow style="@style/layoutStyleV" android:background="@color/azure">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="ГДЕ"></TextView>
        </TableRow>
        <TableRow style="@style/layoutStyleV" android:background="@color/blue">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="СИДИТ"></TextView>
        </TableRow>
        <TableRow style="@style/layoutStyleV" android:background="@color/violet">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="ФАЗАН"></TextView>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>